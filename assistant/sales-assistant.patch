+import {
+  Content,
+  Ids,
+  Message,
+  MessageContentAudio,
+  MessageContentFile,
+  MessageContentText,
+  Product,
+} from "../types/shop-assistant.ts";
+import { mapProductToAnalyticsItem } from "apps/commerce/utils/productToAnalyticsItem.ts";
