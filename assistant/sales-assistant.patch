+          from {
+            transform: scale(0);
+            opacity: 0;
+          }
+          to {
+            transform: scale(1);
+            opacity: 1;
+          }
+        }`}
+        {`@keyframes pulse {
+          0% {
+            transform: scale(1);
+          }
